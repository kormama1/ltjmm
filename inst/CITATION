citHeader("To cite package 'ltjmm' in publications use:")
     
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)
     
citEntry(entry="Manual",
        title = "ltjmm: Latent Time Joint Mixed-effects Models",
        author = personList(as.person("Michael C Donohue"),
                            as.person("Dan Li")),
        year = year,
        note = vers,
        textVersion =
        paste("Michael C Donohue and Dan Li,",
              "(", year, "). ltjmm: Latent Time Joint Mixed-effects Models. ",
              vers, ".", sep=""))

citEntry(entry="Article",
        title = "Bayesian latent time joint mixed effect models for multicohort longitudinal data",
        author = personList(as.person("Dan Li"),
          as.person("Samuel Iddi"),
          as.person("Wesley K Thompson"),
          as.person("Michael C Donohue"),
          person(family="for the Alzheimerâ€™s Disease Neuroimaging Initiative")
          ),
        journal = "Statistical methods in medical research",
        year = 2017,
        url = "https://doi.org/10.1177/0962280217737566",
        textVersion = "Li, D., Iddi, S., Thompson, W. K., Donohue, M. C., for the Alzheimer's Disease Neuroimaging Initiative. (2017). Bayesian latent time joint mixed effect models for multicohort longitudinal data. Statistical methods in medical research, https://doi.org/10.1177/0962280217737566.")
